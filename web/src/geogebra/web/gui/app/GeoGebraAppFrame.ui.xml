<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:web='urn:import:geogebra.web.gui.app'>
  
   <ui:style>
	  .debugborder { border:1px solid black; background-color:red;}
	  .debugeview { background-color:green; border: 1px solid black; width:100%; height:100%;}
  </ui:style>

  <g:DockLayoutPanel styleName="{style.debugborder}" unit='EM'>
    <g:north size='3'>
      <web:GGWToolBar styleName="{style.debugborder}" ui:field='ggwToolBar' />
    </g:north>

    <g:center>
      <g:SplitLayoutPanel>
        <g:west size='300'>
          <web:GGWViewWrapper styleName="{style.debugborder}" ui:field='ggwViewWrapper' />
        </g:west>

        <g:center>
          <web:GGWGraphicsView styleName="{style.debugeview}" ui:field='ggwGraphicsView' />
        </g:center>
        
      </g:SplitLayoutPanel>
    </g:center>
    
    <g:south size='2'>
          <web:GGWCommandLine styleName="{style.debugborder}" ui:field='ggwCommandLine' />
    </g:south>
  </g:DockLayoutPanel>

</ui:UiBinder>