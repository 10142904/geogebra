<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="mobile">

	<source path="mobile" />

	<!-- Inherit the core Web Toolkit stuff. -->

	<inherits name="com.google.gwt.user.User" />

	<!-- Inherits Web Hopefully it inherits everything that is in it, and even 
		Common -->

	<inherits name="geogebra.Common" />

	<inherits name="geogebra.Web" />

	<!-- Other module inherits -->

	<inherits name="com.google.gwt.http.HTTP" />

	<inherits name="com.googlecode.gwtphonegap.PhoneGap" />

	<inherits name="com.googlecode.mgwt.MGWT" />

	<inherits name="com.google.gwt.resources.Resources" />

	<inherits name='org.vectomatic.libgwtsvg' />

	<!-- Specify the app entry point class. -->

	<entry-point class="geogebra.mobile.MobileEntryPoint" />

	<!-- Compile only for Safari now -->

	<set-property name="user.agent" value="safari" />

	<set-configuration-property name="mgwt.css"
		value="pretty" />

	<set-configuration-property name="mobile.devmode.js"
		value="pretty" />

	<!-- Activate SuperDevMode GWT only available in GWT 2.5 -->
	<add-linker name="xsiframe" />
	<set-configuration-property name="devModeRedirectEnabled"
		value="true" />
	<!-- enable source maps -->
</module>